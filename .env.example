# FitPass Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# SUPABASE CONFIGURATION
# Get these from your Supabase project dashboard: https://app.supabase.com
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Backend service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres
SUPABASE_DB_PASSWORD=your_database_password


# GOOGLE MAPS & LOCATION SERVICES
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
EXPO_PUBLIC_LOCATIONIQ_API_KEY=your_locationiq_api_key

# ============================================
# STRIPE PAYMENT CONFIGURATION
# Get from Stripe dashboard: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Webhook secrets (for development and production)
STRIPE_WEBHOOK_SECRET_PRODUCTION=whsec_your_production_webhook_secret
STRIPE_WEBHOOK_SECRET_LOCAL=whsec_your_local_webhook_secret


# SENTRY ERROR TRACKING

# Get from Sentry project settings: https://sentry.io
EXPO_PUBLIC_SENTRY_DSN=https://your_key@your_org.ingest.sentry.io/your_project_id
NEXT_PUBLIC_SENTRY_DSN=https://your_key@your_org.ingest.sentry.io/your_project_id

# Optional: Sentry auth token for uploading source maps
# SENTRY_AUTH_TOKEN=your_sentry_auth_token


# API & SERVER CONFIGURATION
# Local backend URL (adjust port if needed)
EXPO_PUBLIC_API_URL=http://localhost:3001

# Server configuration
PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006,http://192.168.1.4:8081


# APPLICATION SETTINGS
EXPO_PUBLIC_APP_NAME=FitPass
EXPO_PUBLIC_APP_URL=https://fitpass.app
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DAILY_ACCESS_IMMEDIATE_UPDATE=true


# EMAIL CONFIGURATION (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_COMPANY=FitPass AB
NEXT_PUBLIC_EMAIL_SUPPORT=support@yourcompany.com
