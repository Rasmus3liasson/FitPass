{
  "name": "fitpass-monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Kim Chouard",
  "scripts": {
    "dev:all": "concurrently \"pnpm --filter mobile dev\" \"pnpm --filter web dev\" \"pnpm --filter fitpass-backend dev:all\" --names \"mobile,web,backend\" --prefix-colors \"cyan,magenta,yellow\"",
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:web": "pnpm --filter web dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:backend:webhooks": "cd backend && npm run dev:webhooks",
    "dev:backend:all": "cd backend && npm run dev:all",
    "ios": "cd apps/mobile && npx expo start --ios",
    "android": "cd apps/mobile && npx expo start --android",
    "build": "pnpm --recursive run build",
    "cron:deploy": "pnpm --filter fitpass-backend cron:deploy",
    "cron:remove": "pnpm --filter fitpass-backend cron:remove",
    "cron:list": "pnpm --filter fitpass-backend cron:list",
    "cron:get": "pnpm --filter fitpass-backend cron:get",
    "clean": "rm -rf apps/web/.next apps/mobile/.expo apps/*/tsconfig.tsbuildinfo packages/*/tsconfig.tsbuildinfo backend/tsconfig.tsbuildinfo node_modules/.cache",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\" --ignore-path .prettierignore",
    "type-check": "pnpm --recursive run type-check",
    "validate": "pnpm format:check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.28.6",
    "babel-preset-expo": "^54.0.10",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "expo": "^54.0.32",
    "date-fns": "^4.1.0",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  }
}
