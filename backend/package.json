{
  "name": "fitpass-backend",
  "version": "1.0.0",
  "description": "Backend API for FitPass Stripe integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:webhooks": "stripe listen --forward-to localhost:3001/webhook",
    "dev:all": "npm run dev & npm run dev:webhooks",
    "dev-tunnel": "ls -l && nodemon --exec ts-node src/server.ts",
    "build": "tsc || exit 0",
    "start": "node dist/server.js",
    "sync-stripe": "ts-node src/scripts/syncStripeProducts.ts",
    "cleanup-schedules": "ts-node src/scripts/cleanupStripeSchedules.ts",
    "cron:deploy": "ts-node src/services/supabaseCronJobs.ts deploy",
    "cron:remove": "ts-node src/services/supabaseCronJobs.ts remove",
    "cron:list": "ts-node src/services/supabaseCronJobs.ts list",
    "cron:get": "ts-node src/scripts/getCronJobsFromSupabase.ts",
    "test:config": "ts-node src/scripts/testDynamicConfig.ts",
    "test:config-changes": "ts-node src/scripts/testDynamicConfigWithChanges.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.4",
    "@types/node-cron": "^3.0.11",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo-server-sdk": "^4.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "node-cron": "^4.2.1",
    "pg-listen": "^1.7.0",
    "stripe": "^14.14.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
